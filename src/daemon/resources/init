#!/bin/bash
### BEGIN INIT INFO
# Provides:          %%DAEMON%%
# Required-Start:    $local_fs $syslog dbus
# Required-Stop:     $local_fs $syslog dbus
# Default-Start:     2 3 4 5
# Default-Stop:
# Short-Description: %%NAME%%
# Description:       %%DESCRIPTION%%
### END INIT INFO

HELP_TEXT="Usage: $0 {start|stop|restart|uninstall|force-reload|status|help}"

case "$1" in
    start)
       %%CONTROLLER%% --start
       ;;
    stop)
       %%CONTROLLER%% --stop
       ;;
    force-reload) # Just fall through
       ;&
    restart)
       %%CONTROLLER%% --stop
       %%CONTROLLER%% --start
       ;;
    uninstall)
       %%CONTROLLER%% --uninstall
       ;;
    status)
       %%CONTROLLER%% --status
       ;;
    help)
       echo $HELP_TEXT
       %%CONTROLLER%% --help
       ;;
    *)
       echo "Unrecognised option. "$HELP_TEXT
esac
